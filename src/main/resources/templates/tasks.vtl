<h1>All Tasks</h1>

<div class="row">
#foreach($category in $categories)
  <div class="col-md-1">
    <h3><a href="/categories/$category.getId()">$category.getName()</a></h3>
 #foreach ($task in $category.getTasks())
   <li>$task.getDescription()</li>
 #end
 </div>
#end
</div>

<br>
